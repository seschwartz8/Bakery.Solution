@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

<h1>Add a flavor to @Model.Name</h1>


<div class="content">
  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.TreatId)

      @Html.Label("Select flavor")
      @Html.DropDownList("FlavorId")

      <input type="submit" value="Save" class="btn"/>
  }
</div>

