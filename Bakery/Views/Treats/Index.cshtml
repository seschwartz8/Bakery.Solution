@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model List<Bakery.Models.Treat>;

<h1>Treats</h1>

<div class="content">
  @if (@Model.Count == 0)
  {
    <h4>No treats have been added yet!</h4>
  } 

  @foreach (Treat treat in Model)
  {
    <h4>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</h4>
  }
</div>

<div class="links">
  <p>@Html.ActionLink("Add new treat", "Create")</p>
</div>

