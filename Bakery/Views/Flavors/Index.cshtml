@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model List<Bakery.Models.Flavor>;

<h1>Flavors</h1>

<div class="content">
  @if (@Model.Count == 0)
  {
    <h4>No flavors have been added yet!</h4>
  } 

  @foreach (Flavor flavor in Model)
  {
    <h4>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</h4>
  }
</div>

<div class="links">
  <p>@Html.ActionLink("Add new flavor", "Create")</p>
</div>

