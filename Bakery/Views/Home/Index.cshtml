@{
  Layout = "_Layout";
}

<h1>Welcome to Pierre's Bakery!</h1>
<div class="image-container">
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="~/img/bread.jpg" alt="bread" class="active">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="~/img/brioche.jpg" alt="brioche">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="~/img/cinnamon.jpg" alt="cinnamon bun">
      </div>
    </div>
  </div>
</div>
<div class="links">
  <p>@Html.ActionLink("See all flavors", "Index", "Treats")</p>
  <p>@Html.ActionLink("See all treats", "Index", "Flavors")</p>
  <p>@Html.ActionLink("Create an account", "Index", "Account")</p>
</div>
